nav.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl' style='margin: 0px 0px 10px 0px;')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button' ng-click="isCollapsed = !isCollapsed")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') passport

    div#navbar-main.navbar-collapse.bs-js-navbar-collapse(collapse="isCollapsed")
      ul.nav.navbar-nav(style="width: 50%")
        li(ng-repeat='item in menu' ng-class='{active: isActive(item.link)}')
          a(ng-href='{{item.link}}') {{item.title}}

        li(ng-show='isAdmin()' ng-class='{active: isActive("/admin")}')
          a(href='/admin') Admin

        li(ng-show='isLoggedIn()' style='width: 40%')
          a(href='/cart' style='padding: 5px 0 0 0;')
            ngcart-summary

      ul.nav.navbar-nav.navbar-right
        li(ng-hide='isLoggedIn()' ng-class='{active: isActive("/signup")}')
          a(href='/signup') Sign up

        li(ng-hide='isLoggedIn()' ng-class='{active: isActive("/login")}')
          a(href='/login') Login

        li(ng-show='isLoggedIn()')
          p.navbar-text Hello {{ getCurrentUser().name }}

        li(ng-show='isLoggedIn()' ng-class='{active: isActive("/wishlists")}')
          a(href='/wishlists') Wishlists

        li(ng-show='isAdmin()' ng-class='{active: isActive("/test")}')
          a(href='/test') Test Page

        //li(ng-show='isLoggedIn()' ng-class='{active: isActive("/musescore")}')
          a(href='/musescore') Musescore

        li(ng-show='isLoggedIn()' ng-class='{active: isActive("/settings")}')
          a(href='/settings')
            span.glyphicon.glyphicon-cog

        li(ng-show='isLoggedIn()' ng-class='{active: isActive("/logout")}')
          a(href='' ng-click='logout()') Logout
