h2 Change Email

form.form(name='form', ng-submit='changeEmail(form)', novalidate='')
  .form-group
    label New Email
    input.form-control(type='email', name='email', ng-model='user.email', mongoose-error='')
    p.help-block(ng-show='form.email.$error.mongoose')
      | {{ errors.other }}
  
  p.help-block  {{ message }}

  button.btn.btn-lg.btn-primary(type='submit') Save changes
