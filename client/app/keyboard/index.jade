div(ng-include='"components/navbar/navbar.html"')

.container
  .row
    .col-lg-12
      h1.page-header Keyboards: 
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='keyboard in availableKeyboards')
        li
          a(href='/keyboards/{{keyboard._id}}') {{keyboard.name}}
            button.close(type='button', ng-click='deleteKeyboard(keyboard)') Ã— 

  form.review-form
    label Use this form to add new keyboards
    p.input-group
      input.form-control(type='text', placeholder='Enter the name here.', ng-model='newName')
      input.form-control(type='text', placeholder='Enter the description here.', ng-model='newDescription')
      input.form-control(type='text', placeholder='Enter the brand here.', ng-model='newBrand')
      input.form-control(type='number', placeholder='Enter the price here.', ng-model='newPrice')
      input.form-control(type='text', placeholder='Enter the size here.', ng-model='newSize')
      label.checkbox-inline Online Only?
        input.form-control(type='checkbox', name='OnlineOnly', ng-model='newOnlineOnly')
      label.checkbox-inline Featured?
        input.form-control(type='checkbox', name='Featured', ng-model='newFeatured')
      label.checkbox-inline On Sale?
        input.form-control(type='checkbox', name='OnSale', ng-model='newOnSale')  
      label.checkbox-inline Macro Capabilities?
        input.form-control(type='checkbox', name='Macro', ng-model='newMacro')
      label.checkbox-inline Backlit?
        input.form-control(type='checkbox', name='Backlit', ng-model='newBacklit')
      label.checkbox-inline Wireless?
        input.form-control(type='checkbox', name='Wireless', ng-model='newWireless') 
      div
        button.btn.btn-primary(type='submit', ng-click='addComputer()') Add Keyboard

